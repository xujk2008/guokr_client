<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/return_to_main"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/return_icon"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:background="@drawable/return_to_main"
            android:layout_marginLeft="7dp"
        	android:layout_marginTop="7dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/return_icon"
            android:background="@drawable/guokr"
            android:layout_marginLeft="7dp"
        	android:layout_marginTop="7dp"
        	/>
        
    </RelativeLayout>
    
    <TextView
        android:id="@+id/actionBarReturnText"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/return_to_main"
        android:text="@string/app_name"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
